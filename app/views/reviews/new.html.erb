<div class="container">
  <h1>Add your review</h1>
    <%# <form action="/restaurants/13/reviews"></form> %>
  <%= simple_form_for([@restaurant, @review]) do |f| %>
    <%= f.input :content, label: 'Give us your feedback:' %>
    <%= f.input :rating, collection: Review::RATING %>
    <%= f.submit "Send your feedback", class: 'btn btn-primary'%>
  <% end %>

  <div class="row mt-3">
    <%= link_to restaurant_path(@restaurant) do %>
      <p><i class="fa-solid fa-rotate-left "></i>Back to the restaurant profile</p>
    <% end %>
  </div>
</div>
