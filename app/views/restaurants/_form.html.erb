<div class="container">
  <div class="col-6">
    <%= simple_form_for restaurant do |f| %>
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :phone_number %>
      <%= f.input :category, collection: Restaurant::CATEGORY %>
      <%= f.submit "Create a Restaurant", class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
